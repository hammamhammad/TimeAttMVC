                                    <span class="glyphicon form-control-feedback pull-right flip" aria-hidden="true"></span>
                                </div>

                            </div>

                            <div class="form-group has-feedback col-md-8">
                                <label for="dd_Reason_edit" class="control-label">@Resources.Resources.ClmTheReason</label>
                                <div>
                                    <select class="form-control" id="dd_Reason_edit" required data-error="@Resources.Resources.FieldRequiredValidationMsg"></select>
                                    <span class="glyphicon form-control-feedback pull-right flip" aria-hidden="true"></span>
                                </div>

                            </div>

                            <div class="form-group col-md-12 PlusOneDay">
                                <label for="plusoneday" class="checkbox-inline">
                                    <input type="checkbox" id="plusoneday" name="plusoneday" /> @Resources.Resources.ActualDateForTransacionPlusOneDay
                                </label>

                            </div>
                            <div id="ShiftINOUT_CVCode" style="display:none">
                                <div class="form-group ChangeShiftINOUTRadios">
                                    <div class=" col-md-12 columns">

                                        <label for="Chk_ShiftFirstIN" class="radio-inline">
                                            <input id="Chk_ShiftFirstIN" name="shiftINOUT" type="radio" value="1">
                                            @Resources.Resources.lb_ShiftFirstIN
                                        </label>

                                        <label for="Chk_ShiftFirstOUT" class="radio-inline">
                                            <input id="Chk_ShiftFirstOUT" name="shiftINOUT" type="radio" value="2">
                                            @Resources.Resources.lb_ShiftFirstOUT
                                        </label>
                                        <label for="Chk_ShiftSecondIN" class="radio-inline">
                                            <input id="Chk_ShiftSecondIN" name="shiftINOUT" type="radio" value="3">
                                            @Resources.Resources.lb_ShiftSecondIN
                                        </label>

                                        <label for="Chk_ShiftSecondOUT" class="radio-inline">
                                            <input id="Chk_ShiftSecondOUT" name="shiftINOUT" type="radio" value="4">
                                            @Resources.Resources.lb_ShiftSecondOUT
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary btn-lg" id="bt_saveTrans"><span class="glyphicon glyphicon-ok"></span> @Resources.Resources.btSave</button>
                <button type="button" class="btn btn-warning btn-lg" id="bt_CancelTrans" data-dismiss="modal">
                    <span class="glyphicon glyphicon-remove"></span>@Resources.Resources.btCancel
                </button>
            </div>
        </div>
    </div>
</div>

