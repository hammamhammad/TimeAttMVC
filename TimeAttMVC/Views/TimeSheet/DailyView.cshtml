
<div class="panel panel-default">
    <div class="panel-body-top">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Resources.Resources.SearchOptionsTitle</h3>
                        <span class="pull-right flip clickable" id="pn_dailyspan"><i class="glyphicon glyphicon-chevron-up"></i></span>
                    </div>
                    <div class="panel-body" id="pn_dailybody">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-inline">
                                <div class="form-group">
                                    <label for="dailay_FromDate" class="control-label">@Resources.Resources.FromLable</label>
                                    <div class="input-group dateinput">
                                        <input type="text" id="dailay_FromDate" class="form-control dpd" data-date-autoclose="true" data-date-format="yyyy-mm-dd" data-date-language="@Resources.Resources.lang" placeholder="@Resources.Resources.FromDateLable" readonly>
                                        <span class="input-group-addon add-on" onclick="$('#dailay_FromDate').datepicker('show');"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>

                                </div>


                                <div class="form-group">
                                    <label for="dailay_ToDate" class="control-label">@Resources.Resources.ToLable</label>
                                    <div class="input-group dateinput">
                                        <input type="text" id="dailay_ToDate" class="form-control dpd" data-date-autoclose="true" data-date-format="yyyy-mm-dd" data-date-language="@Resources.Resources.lang" placeholder="@Resources.Resources.ToDateLable" readonly>
                                        <span class="input-group-addon add-on" onclick="$('#dailay_ToDate').datepicker('show');"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>


                                </div>
                                <div class="pull-right flip">
                                    <select id="dd_filter" class="timesheet-filter">
                                        <option selected="selected" value="ra_all">@Resources.Resources.AllLable</option>
                                        <option value="ra_Attendance">@Resources.Resources.AttendLable</option>
                                        <option value="ra_absent">@Resources.Resources.AbsentLable</option>
                                        <option value="ra_off">@Resources.Resources.WeekendLable</option>
                                        <option value="ra_vication">@Resources.Resources.VacationsLable</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div id="filterdiv" class="row">
                            <div class="col-md-12">
                                <div class="panel panel-info  panel-timesheetfilter">
                                    <div class="panel-body ">
                                        <div class="form-group TimeSheetRadios">
                                            <div class=" col-md-12">
                                                <label for="ra_onlyin" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_onlyin">
                                                    @Resources.Resources.OnlyInLable
                                                </label>
                                                <label for="ra_latein" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_latein">
                                                    @Resources.Resources.LateInLable
                                                </label>

                                                <label for="ra_earlyout" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_earlyout">
                                                    @Resources.Resources.EarlyOutLable
                                                </label>
                                                <label for="ra_late" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_late">
                                                    @Resources.Resources.LateLable
                                                </label>

                                                <label for="ra_over" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_over">
                                                    @Resources.Resources.OverTiemLable
                                                </label>
                                                <label for="ra_exc" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_exc">
                                                    @Resources.Resources.ExecusesLable
                                                </label>
                                                <label for="ra_incomplete" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_incomplete">
                                                    @Resources.Resources.IncompleteLable
                                                </label>

                                                <label for="ra_manule" class="checkbox-inline">
                                                    <input type="checkbox" name="timesheetfilter" id="ra_manule">
                                                    @Resources.Resources.ManulaLable
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row top10-buffer">
                            <div class="col-md-12">
                                <div class="searchBy">
                                    <div class="col-md-3">
                                        <label for="txt_Select_DailySection" class="control-label">@Resources.Resources.SectionLabe</label>
                                        <div class="input-group">
                                            <input type="text" id="txt_Select_DailySection" class="form-control" placeholder="@Resources.Resources.SectionNameLable" data-id="0" readonly>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailySection:not(:disabled)').length == 0) { return }; Select_Section_Control = $('#txt_Select_DailySection'); $('#SectionDialog').modal('show'); LoadSectionListTable()"><span class="glyphicon glyphicon-list-alt blue"></span></span>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailySection:not(:disabled)').length == 0) { return }; $('#txt_Select_DailySection').attr('data-id', 0).val('').html('');"><span class="glyphicon glyphicon-remove red"></span></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="txt_Select_DailyBranch" class="control-label">@Resources.Resources.BranchLable</label>


                                        <div class="input-group">
                                            <input type="text" id="txt_Select_DailyBranch" class="form-control" placeholder="@Resources.Resources.BranchNameLable" data-id="0" readonly>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailyBranch:not(:disabled)').length == 0) { return }; Select_Branch_Control = $('#txt_Select_DailyBranch'); $('#BranchDialog').modal('show'); LoadBranchListTable()"><span class="glyphicon glyphicon-list-alt blue"></span></span>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailyBranch:not(:disabled)').length == 0) { return }; $('#txt_Select_DailyBranch').attr('data-id', 0).val('').html('');"><span class="glyphicon glyphicon-remove red"></span></span>
                                        </div>


                                    </div>
                                    <div class="col-md-3">
                                        <label for="txt_Select_DailyLocation" class="control-label">@Resources.Resources.LocationNameLable</label>
                                        <div class="input-group">
                                            <input type="text" id="txt_Select_DailyLocation" class="form-control" placeholder="@Resources.Resources.LocationNameLable" data-id="0" readonly>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailyLocation:not(:disabled)').length == 0) { return }; Select_Location_Control = $('#txt_Select_DailyLocation'); $('#LocationDialog').modal('show'); LoadLocationListTable()"><span class="glyphicon glyphicon-list-alt blue"></span></span>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailyLocation:not(:disabled)').length == 0) { return }; $('#txt_Select_DailyLocation').attr('data-id', 0).val('').html('');"><span class="glyphicon glyphicon-remove red"></span></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="txt_Select_DailyEmployee" class="control-label">@Resources.Resources.EmployeeLable</label>


                                        <div class="input-group">
                                            <input type="text" id="txt_Select_DailyEmployee" class="form-control" placeholder="@Resources.Resources.EmployeeNameLable" data-id="0" readonly>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailyEmployee:not(:disabled)').length == 0) { return }; Select_Employee_Control = $('#txt_Select_DailyEmployee'); $('#EmployeeDialog').modal('show'); /*EmployeeListData = null;*/ LoadEmployeeListTable($('#txt_Select_DailySection').attr('data-id'), $('#txt_Select_DailyBranch').attr('data-id'))"><span class="glyphicon glyphicon-list-alt blue"></span></span>
                                            <span class="input-group-addon add-on" onclick="if ($('#txt_Select_DailyEmployee:not(:disabled)').length == 0) { return }; $('#txt_Select_DailyEmployee').attr('data-id', 0).val('').html('');"><span class="glyphicon glyphicon-remove red"></span></span>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row col-centered">
                            <hr />
                            <button class="btn btn-success btn-lg" id="DailybtSearch" onclick="SearchDaily();">@Resources.Resources.btSearch </button>
                            <button class="btn btn-info btn-lg" id="printDaily">@Resources.Resources.btPrint</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body-top fixed-panelWithScrollTimeSheet">

                        <div id="DailyTimeSheetTablediv">
                            <table id="DailyTimeSheetTable" class="table  table-bordered timesheet-table" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>@Resources.Resources.ClmEmpNo </th>
                                        <th>@Resources.Resources.ClmEmployeeName</th>
                                        <th>@Resources.Resources.ClmDate</th>
                                        <th>@Resources.Resources.ClmIN</th>
                                        <th>@Resources.Resources.ClmOut</th>
                                        <th>@Resources.Resources.ClmLateIn</th>
                                        <th>@Resources.Resources.ClmEarlyOut</th>
                                        <th>@Resources.Resources.ClmTimeTotal</th>
                                        <th>@Resources.Resources.ClmActualTime</th>
                                        <th>@Resources.Resources.ClmLateHours</th>
                                        <th>@Resources.Resources.ClmOverHours</th>
                                        <th>@Resources.Resources.ClmExecuse</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

