@{
    ViewBag.Title = Resources.Resources.BranchesManagmentTitle;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewBag.Title</title>
    @Scripts.Render("~/bundles/timeattbranches")
</head>
<body>
    <div class="page-header">
        <h2>@Resources.Resources.BranchesManagmentTitle</h2>
    </div>
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 pull-right flip">
                <nav class="navbar navbar-default">
                    <div class="navbar-form pull-left flip">
                        <button class="btn btn-info btn-md" id="bt_AddBranche" onclick="AddBranchRow();">@Resources.Resources.btAdd</button>
                        <button class="btn btn-primary btn-md" id="bt_reloadBranches" onclick="ReloadBranchesData();">@Resources.Resources.btReload</button>

                    </div>
                </nav>
                <div class="panel panel-default">
                    <div class="panel-body fixed-panelWithScroll">
                        <div id="BranchesTablediv">
                            <table id="BranchesTable" class="table table-striped table-bordered " cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>@Resources.Resources.ClmBranchNumber </th>
                                        <th>@Resources.Resources.ClmBranchName  </th>
                                        <th>@Resources.Resources.ClmEdit</th>
                                        <th>@Resources.Resources.ClmDelete</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            



        </div>
        @Html.Partial("BranshForm")
    </div>
    <script>
    jQuery(function () {
        InitializeBranchesView();
    });
    </script>

</body>
</html>
