@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewBag.Title</title>
    @Scripts.Render("~/bundles/Localization")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <div class="page-header">
        <h2>@Resources.Resources.ManageLanguage</h2>
    </div>

    <div>

        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 pull-right">
                    <nav class="navbar navbar-default">
                        <div class="navbar-form pull-left flip">
                            <button class="btn btn-info btn-md" id="bt_Add" onclick="AddNewRow();">Add New</button>
                            <button class="btn btn-primary btn-md" id="bt_Reload" onclick="ReloadData();">Reload</button>

                        </div>
                    </nav>
                    <nav class="navbar navbar-default">
                        <div class="navbar-form pull-left">
                            <div class="form-group">
                                <label for="dd_ResourceSet">Resources Set</label>

                                <select id="dd_ResourceSet"></select>
                                <button class="btn btn-info btn-md" id="bt_rename" onclick="OpenRenameDialog();">Rename Resource Set</button>
                            </div>
                        </div>
                    </nav>
                    <div class="panel panel-default">
                        <div class="panel-body fixed-panelWithScroll">
                            <div id="ResourcesdataTablediv">
                                <table id="ResourcesdataTable" class="table table-striped table-bordered " cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Resource ID </th>
                                            <th>English Value</th>
                                            <th>Arabic Value</th>
                                            <th>Resource Set </th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>




            </div>

        </div>
    </div>
    @Html.Partial("ResourceForm")
    <div class="modal fade unfold-3d" role="dialog" id="RenameResorceSetFormDialog" data-backdrop="static">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="RenameResorceSetFormDialogTitle">Rename Resource Set</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form class="form form-horizontal" id="RenameResorceSetForm" role="form">
                                <div class="col-md-12">

                                    <div class="form-group has-feedback col-md-12">
                                        <label for="txt_ResourceSetRename" class="control-lable">Resource Set Name</label>
                                        <input id="txt_ResourceSetRename" type="text" name="txt_ResourceSetRename" class="form-control" placeholder="New Resource Set Name" required />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-md" id="bt_saveRename"><span class="glyphicon glyphicon-ok">&nbsp;</span>Save</button>
                    <button type="button" class="btn btn-warning btn-md" id="bt_CancelRename" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove">&nbsp;</span>Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script>
        jQuery(function () {
            InitializeView();
        });
    </script>
</body>
</html>
