<div class="row ">
    <form class="form-horizontal"  data-delay="0" role="form" id="SchGroupForm">
        <fieldset id="SchGroupfieldset">
            <legend>@Resources.Resources.ScheduleGroupTitle</legend>
            <div class="SchGroupFormdiv">
                <div class="form-group has-feedback">
                    <label for="txt_GroupName_edit" class="control-label col-xs-2 col-sm-3 col-md-2">@Resources.Resources.GroupNameLable</label>
                    <div class="col-xs-10 col-sm-9 col-md-10">
                        <input type="text" class="form-control" id="txt_GroupName_edit" placeholder="@Resources.Resources.GroupNameLable" required data-error="@Resources.Resources.FieldRequiredValidationMsg">
                        <span class="glyphicon form-control-feedback pull-right flip" aria-hidden="true"></span>
                        <span class="help-block with-errors"></span>
                    </div>

                </div>

                <div class="form-group has-feedback">
                    <label for="txt_Select_Schedule" class="control-label col-xs-2 col-sm-3 col-md-2">@Resources.Resources.ScheduleNameLable </label>
                    <div class="col-xs-10 col-sm-9 col-md-10">
                       
                        <div class="input-group">
                            <input type="text" id="txt_Select_Schedule" class="form-control" placeholder="@Resources.Resources.ScheduleNameLable" data-id="0" readonly data-required="true" data-error="@Resources.Resources.FieldRequiredValidationMsg">
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <span class="input-group-addon add-on" onclick="if (IsDisabled(this)) return; Select_Schedule_Control = $('#txt_Select_Schedule'); $('#ScheduleDialog').modal('show'); LoadScheduleListTable()"><span class="glyphicon glyphicon-list-alt blue "></span></span>
                        </div>
                        <span class="help-block with-errors smallmargin-bottom"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div class="SchGroupCheckBoxes col-md-offset-2">
                        <div class="col-xs-10 col-sm-9 col-md-10 columns">
                            <label for="Chk_SelectDateLable" class="checkbox-inline">
                                <input id="Chk_SelectDateLable" name="Checkboxes" type="checkbox">
                                @Resources.Resources.SelectDateLable
                            </label>
                        </div>
                    </div>
                </div>
                <div id="schGropDates" class="col-md-offset-2">
                    <div class="panel panel-default">
                        <div class="panel-body fordates">
                            <div class="col-xs-6">
                                <div class="form-group has-feedback">
                                    <label for="schGroup_FromDate" class="control-label">@Resources.Resources.FromLable</label>
                                    <div class="input-group">

                                        <input type="text" id="schGroup_FromDate" class="form-control" data-date-autoclose="true" data-date-format="yyyy-mm-dd" data-date-language="@Resources.Resources.lang" placeholder="@Resources.Resources.FromDateLable" readonly data-required="true" data-error="@Resources.Resources.FieldRequiredValidationMsg">
                                        <span class="glyphicon form-control-feedback pull-right flip" aria-hidden="true"></span>
                                        <span class="input-group-addon add-on" onclick="$('#schGroup_FromDate').datepicker('show');"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>

                                    <span class="help-block with-errors smallmargin-bottom"></span>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group has-feedback">
                                    <label for="schGroup_ToDate" class="control-label">@Resources.Resources.ToLable</label>
                                    <div class="input-group">

                                        <input type="text" id="schGroup_ToDate" class="form-control" data-date-autoclose="true" data-date-format="yyyy-mm-dd" data-date-language="@Resources.Resources.lang" placeholder="@Resources.Resources.ToDateLable" readonly data-required="true" data-error="@Resources.Resources.FieldRequiredValidationMsg">
                                        <span class="glyphicon form-control-feedback pull-right flip" aria-hidden="true"></span>
                                        <span class="input-group-addon add-on" onclick="$('#schGroup_ToDate').datepicker('show');"><span class="glyphicon glyphicon-calendar"></span></span>
                                    </div>

                                    <span class="help-block with-errors smallmargin-bottom"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group has-feedback">
                    <label for="txt_Select_Schedule" class="control-label col-xs-2 col-sm-3 col-md-2">@Resources.Resources.EmployeesLable </label>
                    <div class="col-xs-10 col-sm-9 col-md-10">
                        <button type="button" class="btn btn-primary btn-md bottom5-buffer" onclick="if (IsDisabled(this)) return;Select_Employee_Control = $('#EmployeeScheGroupTable'); $('#EmployeeDialog').modal('show'); LoadEmployeeListTable(0, 0)">@Resources.Resources.btAddEmployee</button>
                        <div class="panel panel-default">
                            <div class="panel-body  EmployeePanel">
                                <div class="col-xs-12">
                                  
                                    <table id="EmployeeScheGroupTable" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>@Resources.Resources.ClmEmpNo </th>
                                                <th>@Resources.Resources.ClmEmployeeName</th>
                                                <th>@Resources.Resources.ClmDelete</th>

                                            </tr>
                                        </thead>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <hr class="colorgraph" />
                <div class="">
                    <button type="submit" class="btn btn-primary btn-lg" id="bt_saveSchGroup"><span class="glyphicon glyphicon-ok"></span> @Resources.Resources.btSave</button>
                    <button type="button" class="btn btn-warning btn-lg" id="bt_CancelSchGroup">
                        <span class="glyphicon glyphicon-remove"></span>@Resources.Resources.btCancel
                    </button>
                </div>
            </div>
</fieldset>
    </form>
</div>
